<div class="content">
    <div class="cart-items">
        <div class="container">
            <h2>Giỏ Hàng Của Bạn (3)</h2>
           

            @foreach (var item in ViewBag.cart)
            {
                <div class="cart-header">
                    <div class="close1" ><a asp-controller="Cart" asp-action="remove" asp-route-id="@item.SanPham.ID">Xóa</a> </div>
                    <div class="cart-sec simpleCart_shelfItem">
                        <div class="cart-item cyc">
                            <img src="~/images/@item.SanPham.Image" class="img-responsive" alt="">
                        </div>
                        <div class="cart-item-info">
                            <h3><a href="#">@item.SanPham.TenSP </a><span></span></h3>
                            <ul class="qty">
                                <li>Số Lượng<p>@item.QuanTity</p></li>
                                <li><p>@item.SanPham.Size</p></li>
                            </ul>
                            <div class="delivery">
                                <p>@item.SanPham.Gia </p>
                                <span>@item.SanPham.MoTa</span>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            }

            <p><b> Thành Tiền:</b>@ViewBag.total Đồng</p>
            <a class="btn btn-danger" asp-controller="Pages" asp-action="Index">Tiếp tục mua hàng</a>
        </div>
    </div>
