@model DoAn_ASPNETCORE.Areas.Admin.Models.NhaCungCapViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <p>
                        <a asp-action="Create">Create New</a>
                    </p>
                    <form asp-controller="NhaCungCap" asp-action="Index" method="get">
                        <p>

                            Tên Nhà Cung cấp: <input type="text" asp-for="SearchString"><button type="submit" class="btn-facebook">Tìm</button>
                            
                        </p>
                    </form>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NhaCungCaps[0].TenNCC)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NhaCungCaps[0].DiaChi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NhaCungCaps[0].TrangThai)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.NhaCungCaps)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenNCC)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiaChi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TrangThai)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
